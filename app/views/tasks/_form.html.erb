<% @task.errors.full_messages.each do |msg| %>
<p class="text-warning"><%= msg %></p>
<%end%>
<div class="form-group">
  <div class="col-md-12">
    <%=form_with model: @task do |f| %>
    <%=f.label :title %>
    <%=f.text_field :title, class: 'form-control' %>
    <%=f.label :details %>
    <%=f.text_field :details, class: 'form-control', rows: "3"%>
    <%=f.submit class: 'btn btn-secondary mt-2'%>
    <%=link_to 'Tasks List', tasks_path, class: 'btn btn-warning mt-2'%>
  </div>
  <% end %>
</div>
