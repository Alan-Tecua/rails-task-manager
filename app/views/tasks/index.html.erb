<div>
  <h1>Le tasks</h1>
  <div class="form-check" id="links">
    <div class="col-md-12">
      <%@tasks.each do |task| %>
      <input class="form-check-input" type="checkbox" value="">
      <li><%=link_to task.title, task_path(task)%> <%= link_to 'x', task_path(task), class: 'text-warning', data: { turbo_method: :delete, turbo_confirm: 'Delete this task?' }  %></li>
      <% end %>
      <hr>
      <%=link_to('+ Add a new task', '/new' )%>
      <%# <i class="fa-solid fa-plus"></i> %>
    </div>
  </div>
</div>
